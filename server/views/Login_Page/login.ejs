<html>
<head>
    <%- include('login_head') %>
</head>
<body>
  <header>
    <%- include('../global_header') %>
  </header>
<br><br>
<div style="text-align: center">
    <a href="studentregister">Create an account</a>
</div>
<h1 align="center">Login Page</h1>

<div class="login">
    <form action="/userlogin" method="POST">
        <%- include('../partials/messages') %>
        <label for="emailadd"><b>Email Address</b></label><br>
        <input type="email" placeholder="Enter Email Address" name="emailadd" id="emailadd" value="<%= typeof emailaddress != 'undefined' ? emailaddress : '' %>" required>
        <label for="pass"><b>Password</b></label><br>
        <input type="password" placeholder="Enter Password" name="pass" id="pass" required>
        <br>
        <div>
            <a href="passwordreset">Forgot Password</a>
        </div><br><Br>
        <input  type="submit" value="Submit">
    </form>
<br><br>
</div>
<br>
<br>

<footer>
    <%- include('../global_footer') %>
</footer>

